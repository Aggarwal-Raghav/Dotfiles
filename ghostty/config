## Theme
theme = Dracula+
font-family = Monaco Nerd Font Mono
font-size = 14


cursor-style = block
cursor-style-blink = false

clipboard-read = "allow"
clipboard-paste-protection = false
copy-on-select = clipboard
clipboard-trim-trailing-spaces = true

bold-is-bright = true

window-inherit-working-directory = false
working-directory = home

macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
macos-option-as-alt = true

mouse-hide-while-typing = true

desktop-notifications = true
auto-update = download

# keymaps
keybind = global:cmd+`=toggle_quick_terminal
keybind = cmd+shift+left=move_tab:-1
keybind = cmd+shift+right=move_tab:+1
keybind = cmd+left=previous_tab
keybind = cmd+right=next_tab
keybind = cmd+opt+left=goto_split:left
keybind = cmd+opt+down=goto_split:bottom
keybind = cmd+opt+up=goto_split:top
keybind = cmd+opt+right=goto_split:right
